extend layout

block content
  h2.page-header Login Below
  p Please register using the form below
  form(method='post', action='/users/login')
    .form-group
      label Username
      input.form-control(name='username', type='text', placeholder='Username Goes Here')
    .form-group
      label Password
      input.form-control(name='password', type='password', placeholder='Password Goes Here')
    input.btn.btn-primary(type='submit', name='submit', value='Login')
    
